<resources>
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/back_primary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorHighlight">@color/blue</item>
        <item name="android:textCursorDrawable">@drawable/edittext_cursor</item>
        <item name="android:colorControlNormal">@color/blue</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:colorControlHighlight">@color/blue</item>
        <item name="android:textSelectHandle">@color/blue</item>
        <item name="android:datePickerDialogTheme">@style/CustomDatePickerDialog</item>
    </style>
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorBackground">@color/label_tertiary</item>
    </style>
</resources>