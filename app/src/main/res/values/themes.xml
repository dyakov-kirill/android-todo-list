<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TODOList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_back_light</item>
        <item name="colorPrimaryVariant">@color/primary_back_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="backgroundColor">@color/primary_back_light</item>
        <item name="cardBackgroundColor">@color/secondary_back_light</item>
        <item name="android:textColor">@color/primary_label_light</item>
        <item name="android:textColorSecondary">@color/secondary_label_light</item>
        <item name="android:textColorHighlight">@color/green_light</item>
        <item name="android:textColorTertiary">@color/tertiary_label_light</item>
        <item name="android:textColorLink">@color/blue_light</item>
        <item name="android:weekSeparatorLineColor">@color/separator_light</item>
        <item name="colorError">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/disable_label_light</item>
        <item name="android:textColorPrimaryNoDisable">@color/red_light</item>
    </style>

    <style name="CheckboxStyle">
        <item name="colorAccent">@color/green_light</item>
    </style>
</resources>